generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model chat {
  id            String          @id @default(cuid())
  chatSessionId String
  content       String          @db.Text
  role          chat_role
  sentiment     chat_sentiment? @default(positif)
  createdAt     DateTime        @default(now())
  chatSession   chatSession     @relation(fields: [chatSessionId], references: [id], map: "Chat_chatSessionId_fkey")

  @@index([chatSessionId], map: "Chat_chatSessionId_fkey")
}

model chatSession {
  id        String    @id @default(cuid())
  userId    String
  createdAt DateTime  @default(now())
  deletedAt DateTime? @db.DateTime(0)
  title     String
  chat      chat[]
  user      user      @relation(fields: [userId], references: [id], map: "ChatSession_userId_fkey")

  @@index([userId], map: "ChatSession_userId_fkey")
}

model user {
  id          String        @id @default(cuid())
  email       String        @unique(map: "User_email_key") @db.VarChar(255)
  name        String        @db.VarChar(100)
  image       String?       @db.Text
  provider    String        @db.VarChar(50)
  bannedUntil DateTime?     @db.DateTime(0)
  role        String        @default("user") @db.VarChar(50)
  createdAt   DateTime      @default(now())
  updateAt    DateTime      @default(now())
  chatSession chatSession[]
}

enum chat_role {
  user
  bot
}

enum chat_sentiment {
  positif
  negatif
  netral
}
